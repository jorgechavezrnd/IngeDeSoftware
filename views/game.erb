<% if @perdiste == true %>
  <script>
    if (window.confirm('El wumpus te encontró y decidió atacarte. Trataste de defenderte pero fue inútil. Fin del juego')) 
    {
      window.location.href='/';
    }
    else
    {
      window.location.href='/';
    }
  </script>
<% end %>
<% if @ganaste == true %>
  <script>
    if (window.confirm('Ganaste. Fin del juego')) 
    {
      window.location.href='/';
    }
    else
    {
      window.location.href='/';
    }
  </script>
<% end %>

<table>
  <tr>
    <th>
      <textarea name="informacion" rows="40" cols="50" disabled>
      <%= @MensajeF %>
      <%= @mensaje %>
      <%= @MensajeEstado %></textarea>
    </th>

    <th>
      <% if  @detect == true  %>
        <textarea name="informacion" rows="40" cols="50" disabled>Hay un olor en el aire, el wumpus está cerca</textarea>
      <% end %>
    </th>

    <th valign="top">
      <h2> Flechas: <%= @cantFlechas %> </h2>
        <form action="/action" method="post">
          <button name="accion" type="submit" value="disparar">Lanzar flecha</button>
          <button name="accion" type="submit" value="moverse">Moverse</button>
        </form>
      <% if @disparo == true %>

        <form action="/shot" method="post">
          <button name="accion" type="submit" value="arriba">&#8593;</button>
          <button name="accion" type="submit" value="abajo">&#8595;</button>
          <button name="accion" type="submit" value="izquierda">&#8592;</button>
          <button name="accion" type="submit" value="derecha">&#8594;</button>
        </form>
      <% end %>
      <% if @moverse == true %>
      <form action="/move" method="post">
        <button name="accion" type="submit" value="arriba">&#8593;</button>
        <button name="accion" type="submit" value="abajo">&#8595;</button>
        <button name="accion" type="submit" value="izquierda">&#8592;</button>
        <button name="accion" type="submit" value="derecha">&#8594;</button>
      </form>
      <% end %>
    </th>
  </tr>
</table>
<form action="/action" method="post">
  <button name="accion" type="submit" value="salir">Salir</button>
</form>