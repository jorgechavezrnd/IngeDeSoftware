<% if @youLose == true %>
  <script>
    if (window.confirm('El wumpus te encontró y decidió atacarte. Trataste de defenderte pero fue inútil. Fin del juego. Monedas totales: <%= @money %>')) 
    {
      window.location.href='/';
    }
    else
    {
      window.location.href='/';
    }
  </script>


<% end %>

<% if @waterWell == true %>
  <script>
    if (window.confirm('Haz caido en un pozo, no puedes salir de ahi, fin del juego. Monedas totales: <%= @money %>')) 
    {
      window.location.href='/';
    }
    else
    {
      window.location.href='/';
    }
  </script>
<% end %>

<% if @youWin == true %>
  <script>
    if (window.confirm('Ganaste. Fin del juego. Monedas totales: <%= @money %>')) 
    {
      window.location.href='/';
    }
    else
    {
      window.location.href='/';
    }
  </script>
<% end %>


<table>
  <tr>
    <th>
      <textarea name="informacion" rows="40" cols="50" disabled>
        <% if @wumpusAround == true %><%= @messageWumpusAround %><% end %>
        <% if @detectArrow == true %><%= @detectArrowMessage %><% end %>
        <% if @detectBreeze == true %><%= @messageBreeze %><% end %>
        <% if @detectBats == true %><%= @detectBatsMessage %><% end %>
        <% if @useSpray == true %><%= @useSprayMessage %><% end %><% if @moveRandom == true %><%= @randomMovementByBatsMessage %><% end %>
        <% if @shootfail == true %><%= @messageShootFail %><% end %><% if @arrowEmpty == true %><%= @messageArrowQuantity %><% end %><% if @wrongMove == true %><%= @messageNotMovement %><% end %>
        <%= @playerPosition %>
        <% if @action == true %><%= @messageAction %><% end %><% if @shoot == true %><%= @messageShootOption %><% end %><% if @move == true %><%= @messageMovementOption %><% end %>
      </textarea>

    </th>

    <th valign="top">

      <h2> Flechas: <%= @numberArrow %> </h2>
      <h2> Monedas: <%= @money %> </h2>
      <h2> Spray: <%= @numberSpray %> </h2>

      <form action="/action" method="post">
        <button name="accion" type="submit" value="disparar">Lanzar flecha</button>
        <button name="accion" type="submit" value="moverse">Moverse</button>
      </form>

      <% if @shoot == true %>
        <form action="/shot" method="post">
          <button name="direccion" type="submit" value="North">↑</button>
          <button name="direccion" type="submit" value="South">↓</button>
          <button name="direccion" type="submit" value="West">←</button>
          <button name="direccion" type="submit" value="East">→</button>
        </form>
      <% end %>

      <% if @move == true %>
        <form action="/move" method="post">
          <button name="direccion" type="submit" value="North">↑</button>
          <button name="direccion" type="submit" value="South">↓</button>
          <button name="direccion" type="submit" value="West">←</button>
          <button name="direccion" type="submit" value="East">→</button>
        </form>
      <% end %>

    </th>
  </tr>

</table>
<form action="/action" method="post">
  <button name="accion" type="submit" value="salir">Salir</button>
</form>